@page
@model LoginModel


<div class="text-center">
    <div class="form-group-sm">
        <form class="js-validate" id="account" method="post">
            <div id="login" data-target-group="idForm">
                <header class="text-center mb-7">
                    <h2 class="h4 mb-0">Welcome Back on Beauty Salon!</h2>
                    <p>Login to manage your account.</p>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </header>
                <div class="form-group">
                    <div class="js-form-message js-focus-state">
                        <label class="sr-only" for="signinEmail">Email</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="signinEmailLabel">
                                    <span class="fas fa-user"></span>
                                </span>
                            </div>
                            <input asp-for="Input.Email" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="form-group mb-6">
                    <div class="js-form-message js-focus-state">
                        <label class="sr-only" for="signinPassword">Password</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="signinPasswordLabel">
                                    <span class="fas fa-lock"></span>
                                </span>
                            </div>
                            <input asp-for="Input.Password" class="form-control " />
                        </div>
                    </div>
                </div>
                <div class="mb-sm-5 m-auto col-sm-6">
                    <button type="submit" class="btn btn-block btn-sm btn-primary transition-3d-hover">Login</button>
                </div>
                <div class="text-center mb-4">
                    <span class="small text-muted">Do not have an account?</span>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </div>
                <div class="text-center">
                    <span class="u-divider u-divider--xs u-divider--text mb-2">OR</span>
                </div>
            </div>
        </form>
        <div class="d-flex">
            <div class="btn btn-block btn-sm  transition-3d-hover mr-1" href="#">
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                    
                    <p>

                        @if (Model.ExternalLogins == null)
                        {
                            return;
                        }
                        <div class="d-flex">
                            @foreach (var provider in Model.ExternalLogins)
                            {

                                if (provider.Name == "Facebook")
                                {
                                    <button type="submit" class="btn btn-block btn-sm btn-soft-facebook transition-3d-hover ml-1 mt-0" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                                if (provider.Name == "Google")
                                {
                                    <button type="submit" class="btn btn-block btn-sm btn-soft-google transition-3d-hover ml-1 mt-0" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            }
                        </div>
                           
                    </p>
                </form>                    
            </div>
           
        </div>        
    </div>         
 </div>
  

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
